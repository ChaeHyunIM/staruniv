{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": ["@solidjs/start/env", "vitest/globals", "@testing-library/jest-dom"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
